				<RowDefinition Height=".3*"/>
				<RowDefinition Height="60"/>
				<RowDefinition Height="60"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
		
		
		</Grid>
		
		<!-- Main content area -->

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height=".3*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<TextBlock Text="Test" HorizontalAlignment="Center" VerticalAlignment="Center"/>
			
			
		</Grid>	
		
	</Grid>

</Window>
