        x:Class="MetricsMonitorClient.Views.MainWindowView"
        Icon="/Assets/avalonia-logo.ico"
        Title="MetricsMonitorClient">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>




	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width=".2*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Sidebar -->
		<Grid Grid.Column="0">
