<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MetricsMonitorClient"
             x:Class="MetricsMonitorClient.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
    </Application.Styles>
	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="MM-Black">#000000</Color>
			<Color x:Key="MM-Red">#CF0A0A</Color>
			<Color x:Key="MM-Orange">#DC5F00</Color>
			<Color x:Key="MM-Light">#EEEEEE</Color>
		</ResourceDictionary>
	</Application.Resources>

</Application>
