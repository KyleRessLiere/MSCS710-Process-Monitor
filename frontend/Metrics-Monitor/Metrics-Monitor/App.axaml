<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MetricsMonitorClient"
             x:Class="MetricsMonitorClient.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
	<Application.Resources>
		<ResourceDictionary>
			<Color x:Key="MM-Black">#000000</Color>
			<Color x:Key="MM-Red">#CF0A0A</Color>
			<Color x:Key="MM-Orange">#DC5F00</Color>
			<Color x:Key="MM-Light">#EEEEEE</Color>
		</ResourceDictionary>
	</Application.Resources>
	<Application.Styles>
		<StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
		<StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
		<StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Default.xaml"/>
		<StyleInclude Source="avares://NP.Avalonia.Visuals/Themes/ThemeStyles.axaml"/>
		<FluentTheme/>
		<StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Fluent.axaml"/>
	</Application.Styles>
</Application>
